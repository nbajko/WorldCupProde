@model IEnumerable<StandingsViewModel>

@{
    Layout = null;
    var index = 0;
}

<table class="table table-striped table-standings">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th class="info">Jugador</th>
            <th class="info text-center">Puntos</th>
            <th class="text-center">Aciertos</th>
            <th class="text-center">R. Exacto</th>
            <th class="text-center">Extras</th>
            <th class="text-center">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            index++;

            var rowClass = string.Empty;
            if (User.Identity.GetEmailAddress() == player.UserEmail)
            {
                rowClass = "active-user";
            }

            <tr @rowClass>
                <td>@index</td>
                <td class="info">@player.UserName (@player.UserEmail)</td>
                <td class="info text-center">@player.Points</td>
                <td class="text-center">@player.Results</td>
                <td class="text-center">@player.ExactResult</td>
                <td class="text-center">@player.ExtraPoints</td>
                <td class="text-center">@Html.ActionLink("Detalles", "BetResults", "Player", new { Id = player.UserId }, null)</td>
            </tr>
        }
    </tbody>
</table>

